<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ahsan.intiser.layoutexample.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_linear_layout_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Linear Layout-Horizontal"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_linear_layout_2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Linear Layout-Vertical"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_relative_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Relative Layout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_frame_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Frame Layout"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>
